{{> mainmenu _id="settings" }}

<section class="ui raised segment">
  <div class="ui grid">
    <div class="ui ten wide column">
      <div class="ui stacked fluid form segment">
        <form action="/settings" method="POST">
          <h3 class="ui header">Update Info</h3>
          <div class="two fields">
            <div class="field">
              <label>First Name</label> <input value="{{user.firstName}}" type="text" name="firstName">
            </div>
            <div class="field">
              <label>Last Name</label> <input value="{{user.lastName}}" type="text" name="lastName">
            </div>
          </div>
          <div class="field">
            <label>Email</label> <input value="{{user.email}}" type="text" name="email">
          </div>
          <div class="field">
            <label>Password</label> <input value="{{user.password}}" type="password" name="password">
          </div>
          <button class="ui blue submit button">Save</button>
        </form>
        {{> error }}
      </div>
    </div>
    <aside class="ui five wide column">
      <img src="https://d1nhio0ox7pgb.cloudfront.net/_img/v_collection_png/512x512/shadow/user_edit.png" class="ui medium image">
    </aside>
  </div>
</section>
